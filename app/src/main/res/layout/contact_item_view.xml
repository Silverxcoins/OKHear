<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_item_view_height">

    <FrameLayout
        android:id="@+id/contact_avatar_container"
        android:layout_width="@dimen/contact_avatar_diameter"
        android:layout_height="@dimen/contact_avatar_diameter"
        android:layout_marginStart="@dimen/contact_avatar_margin_start"
        android:layout_marginTop="@dimen/contact_avatar_margin_top">

        <ImageView
            android:id="@+id/contact_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/avatar_shape"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/contact_avatar_border"/>
    </FrameLayout>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/contact_avatar_container"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:textSize="@dimen/contact_name_text_size"
        android:text="Иван Иванов"/>


    <ImageView
        android:id="@+id/call_button"
        android:layout_width="@dimen/call_button_diameter"
        android:layout_height="@dimen/call_button_diameter"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/call_button_margin_end"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_call" />
</RelativeLayout>