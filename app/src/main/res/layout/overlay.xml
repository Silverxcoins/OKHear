<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/search_bar_with_status_background"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <View
            android:id="@+id/status_bar_background"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <FrameLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_bar_height">

            <ImageView
                android:id="@+id/search_bar_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/search_bar_background"/>

            <EditText
                android:id="@+id/search_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:padding="@dimen/search_field_padding"
                android:layout_marginLeft="@dimen/search_field_margin_horizontal"
                android:layout_marginRight="@dimen/search_field_margin_horizontal"
                android:background="@drawable/search_field_background"
                android:hint="@string/search_hint"
                android:singleLine="true"/>

            <View
                android:layout_width="@dimen/my_avatar_diameter"
                android:layout_height="@dimen/my_avatar_diameter"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/search_bar_button_margin_horizontal"
                android:background="@drawable/avatar_shape"/>

            <View
                android:id="@+id/add_contact_button"
                android:layout_width="@dimen/overlay_button_diameter"
                android:layout_height="@dimen/overlay_button_diameter"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="@dimen/search_bar_button_margin_horizontal"
                android:background="@drawable/ic_add_contact"/>
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/overlay_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_strip_height"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/left_main_button"
        android:layout_width="@dimen/main_button_diameter"
        android:layout_height="@dimen/main_button_diameter"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/left_main_button_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/left_main_button_background"/>


        <View
            android:id="@+id/left_main_button_icon"
            android:layout_width="@dimen/overlay_button_diameter"
            android:layout_height="@dimen/overlay_button_diameter"
            android:layout_marginStart="@dimen/main_buttons_icons_margin"
            android:layout_marginBottom="@dimen/main_buttons_icons_margin"
            android:layout_gravity="bottom|start"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_main_button"
        android:layout_width="@dimen/main_button_diameter"
        android:layout_height="@dimen/main_button_diameter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/right_main_button_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/right_main_button_background"/>

        <View
            android:id="@+id/right_main_button_icon"
            android:layout_width="@dimen/overlay_button_diameter"
            android:layout_height="@dimen/overlay_button_diameter"
            android:layout_marginEnd="@dimen/main_buttons_icons_margin"
            android:layout_marginBottom="@dimen/main_buttons_icons_margin"
            android:layout_gravity="bottom|end"
            android:background="@drawable/ic_camera" />
    </FrameLayout>

</merge>